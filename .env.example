# Configuraci贸n de Entorno para Sistema de Eventos
# Copiar este archivo a .env.local y editar con valores reales

# ============================================
# Base de Datos
# ============================================
DB_HOST=localhost
DB_NAME=eventos
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# ============================================
# Aplicaci贸n
# ============================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/eventos
APP_NAME="Sistema de Gesti贸n de Eventos"
APP_VERSION=2.0

# ============================================
# Seguridad
# ============================================
# Protecci贸n contra fuerza bruta en login
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_DURATION=1800

# Rate limiting por IP+cedula (consulta QR)
RATE_LIMIT_QR_CHECKS=10
RATE_LIMIT_QR_WINDOW=300

# Session
SESSION_TIMEOUT=1800
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_HTTPONLY=true

# CSRF
CSRF_TOKEN_LENGTH=64

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_PATH=./logs
LOG_MAX_FILES=30

# ============================================
# QR Code
# ============================================
QR_SIZE=320
QR_MARGIN=10
QR_ERROR_CORRECTION=M

# ============================================
# Permisos y Roles
# ============================================
# Rol ADMIN: acceso completo a admin_eventos, ver reportes
# Rol OPERATOR: solo puerta (check-in), ver reportes propios
# Rol GUEST: solo registro y consulta QR propios
DEFAULT_ROLE=guest

# ============================================
# Email (futuro)
# ============================================
MAIL_FROM=eventos@local
MAIL_DRIVER=sendmail

# ============================================
# Timezone
# ============================================
TIMEZONE=America/Bogota
