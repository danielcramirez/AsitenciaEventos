<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Establecer la base de la aplicaci√≥n
    RewriteBase /eventos/
    
    # No redirigir si es un archivo o directorio existente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # No redirigir archivos del vendor o tests
    RewriteCond %{REQUEST_URI} !^/eventos/(vendor|tests|app|database|core|controllers|models|views)/ [NC]
    
    # Redirigir todas las requests a index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Prevenir acceso directo a archivos PHP sensibles
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Permitir solo index.php
<FilesMatch "^index\.php$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Allow from all
    </IfModule>
</FilesMatch>

# Proteger archivos sensibles
<FilesMatch "(config\.php|db\.php|auth\.php|helpers\.php|bootstrap\.php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Headers de seguridad
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"
